<div class="mapa-container">
  <div class="mx-auto max-w-screen-sm text-center mb-8 lg:mb-16">
            <h2 class="motion-preset-fade motion-duration-2000 mb-4 text-4xl tracking-tight bg-gradient-to-r from-amber-300 to-green-600 bg-clip-text text-transparent font-extrabold">Ubicanos</h2>
            <p class="font-light text-gray-500 lg:mb-16 sm:text-xl dark:text-gray-400">Eco Escuela Soy ibre</p>
        </div> 
<iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d761.0605527266985!2d-76.7490123!3d-11.9651361!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x49e18b5f4a001fab%3A0xfe508675d1792524!2sEco%20Escuela%20Soy%20Libre!5e1!3m2!1ses!2spe!4v1761530070992!5m2!1ses!2spe" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</div>

<style>
  /* MEDIA QUERY PARA MÓVILES (Max-width: 600px)
    Esto aplica a pantallas PEQUEÑAS
  */
  @media (max-width: 600px) {
    .mapa-container {
      /* Altura para móviles */
      height: 400px;
      
      /* Oculta desborde horizontal */
      overflow: hidden; 
    }
    
    .mapa-container iframe {
      max-width: 100%;
    }
  }

  /* MEDIA QUERY PARA ESCRITORIO (Min-width: 601px)
    Esto aplica a pantallas GRANDES
  */
  @media (min-width: 601px) {
    .mapa-container {
      /* Altura para escritorio, evita que el footer desaparezca */
      height: 500px; 
      
      /* Asegura que no haya desborde inesperado */
      overflow: hidden;
    }
  }
</style>